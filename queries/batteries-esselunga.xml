<!--
This query looks for nodes, ways and relations 
with the given key/value combination.
Choose your region and hit the Run button above!
-->
<osm-script output="json" timeout="25">
  <!-- gather results -->
  <union>
    <!-- query part for: “amenity=recycling” -->
    <query type="node">
      <has-kv k="amenity" v="recycling"/>
      <has-kv k="recycling:batteries" v="yes"/>            
      <bbox-query {{bbox}}/>
    </query>
    <query type="way">
      <has-kv k="amenity" v="recycling"/>
      <has-kv k="recycling:batteries" v="yes"/>            
      <bbox-query {{bbox}}/>
    </query>
    <query type="relation">
      <has-kv k="amenity" v="recycling"/>
      <has-kv k="recycling:batteries" v="yes"/>            
      <bbox-query {{bbox}}/>
    </query>
    <!-- 2nd part -->
    <query type="node">
      <has-kv k="name" regv="^Esselunga"/>
      <!-- means "begins with Esselunga" -->
      <bbox-query {{bbox}}/>
    </query>
    <query type="way">
      <has-kv k="name" regv="^Esselunga"/>
      <bbox-query {{bbox}}/>
    </query>
    <query type="relation">
      <has-kv k="name" regv="^Esselunga"/>
      <bbox-query {{bbox}}/>
    </query>
  </union>
  <!-- print results -->
  <print mode="body"/>
  <recurse type="down"/>
  <print mode="skeleton" order="quadtile"/>
</osm-script>